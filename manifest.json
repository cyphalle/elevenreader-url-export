{
  "manifest_version": 2,
  "name": "ElevenReader URL Export",
  "version": "1.0.0",
  "description": "Export URLs from your browser for ElevenReader",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "cookies",
    "https://api.elevenlabs.io/*",
    "https://elevenreader.io/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "ElevenReader URL Export",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://elevenreader.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
